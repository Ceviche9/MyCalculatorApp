<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray_button"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:gravity="end|bottom"
        android:background="@color/background"
        android:layout_height="250dp"
    />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnSeven"
            android:backgroundTint="@color/background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:text="@string/_7"
            tools:ignore="NestedWeights" />

        <Button
            android:backgroundTint="@color/background"
            android:layout_margin="3dp"
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/_8"
            android:onClick="onDigit"
            android:layout_height="match_parent" />
        <Button
            android:backgroundTint="@color/background"
            android:layout_margin="3dp"
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/_9"
            android:onClick="onDigit"
            android:layout_height="match_parent"/>
        <Button
            android:layout_margin="3dp"
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/_divide"
            android:onClick="onOperator"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:backgroundTint="@color/background"
            android:layout_margin="3dp"
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/_4"
            android:onClick="onDigit"
            android:layout_height="match_parent"/>
        <Button
            android:backgroundTint="@color/background"
            android:layout_margin="3dp"
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/_5"
            android:onClick="onDigit"
            android:layout_height="match_parent"/>
        <Button
            android:backgroundTint="@color/background"
            android:layout_margin="3dp"
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/_6"
            android:onClick="onDigit"
            android:layout_height="match_parent"/>
        <Button
            android:layout_margin="3dp"
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/_multiply"
            android:onClick="onOperator"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:backgroundTint="@color/background"
            android:layout_margin="3dp"
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/_1"
            android:onClick="onDigit"
            android:layout_height="match_parent"/>
        <Button
            android:backgroundTint="@color/background"
            android:layout_margin="3dp"
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/_2"
            android:onClick="onDigit"
            android:layout_height="match_parent"/>
        <Button
            android:backgroundTint="@color/background"
            android:layout_margin="3dp"
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/_3"
            android:onClick="onDigit"
            android:layout_height="match_parent"/>
        <Button
            android:layout_margin="3dp"
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/_Subtract"
            android:onClick="onOperator"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:backgroundTint="@color/background"
            android:layout_margin="3dp"
            android:id="@+id/btnZero"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/_0"
            android:onClick="onDigit"
            android:layout_height="match_parent"/>
        <Button
            android:backgroundTint="@color/background"
            android:layout_margin="3dp"
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/_dot"
            android:onClick="onDecimalPoint"
            android:layout_height="match_parent"/>
        <Button
            android:backgroundTint="@color/background"
            android:layout_margin="3dp"
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/_clear"
            android:onClick="onClear"
            android:layout_height="match_parent"/>
        <Button
            android:layout_margin="3dp"
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/_plus"
            android:onClick="onOperator"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:backgroundTint="@color/background"
            android:layout_margin="3dp"
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="@string/_equal"
            android:onClick="onEqual"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>